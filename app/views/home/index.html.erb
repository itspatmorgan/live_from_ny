<!-- Query NYTIMES_SEARCH API by a given date -->

<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="navbar-header">
    <ul class="nav navbar-nav">
      <li><a class="navbar-brand" href="/">LiveFromNY</a></li>
      <li><a class="navbar-brand" href="/">Home</a></li>
      <li><a class="navbar-brand" href="<%=user_path(current_user)%>">Profile</a></li>
      <li><p class="navbar-text">Signed in as <%=current_user.email%></p></li>
    </ul>
  </div>
</nav>

<div class="jumbotron" id="main_search">
  <h1>Live From New York it's...</h1>

  <form class="form-inline" role="form" action="<%=articles_path%>" method="get">
    <div class="form-group has-info">
      <input class="form-control input-lg" type="text" name="date" placeholder="MM/DD/YYYY">
    </div>
    <button id="submit" class="btn btn-default btn-lg">Search</button>
  </form>
</div>

<nav class="navbar navbar-inverse navbar-fixed-bottom" role="navigation">
  <form action="<%=destroy_user_session_path%>" method="post">
    <input type="hidden" name='_method' value='delete'>
    <button class="btn btn-default navbar-btn" id="log_out">Log out</button>
  </form>
</nav>